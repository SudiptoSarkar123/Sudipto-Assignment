<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Categories</h1>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if(categories.length !== 0){ %>
                <% categories.forEach((category, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= category.name %></td>
                        <td>
                            <a href="/admin/category/edit/<%= category._id %>" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/admin/category/delete/<%= category._id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }); } else { %>
                    <tr>
                        <td colspan="3" class="text-center">No categories found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/admin/addCategoryPg" class="btn btn-primary mt-3">Add New Category</a>
        <a href="/admin/admin" class="btn btn-primary mt-3">Home</a>
    </div>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>